<h1>Tag list</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
      <% if logged_in? %>
        <%= link_to "Delete Tag", tag_path(tag), method: :delete, data: {confirm: "Delete the '#{tag.name}' tag?"} %>
      <% end %>
    </li>
  <% end %>
  <%= link_to "<< Back to Articles List", articles_path %>
</ul>
